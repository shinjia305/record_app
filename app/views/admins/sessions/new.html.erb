<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>ログイン</h2>
      <div class="box-email">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password %><br />
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた場合", new_admin_session_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="box-login">
        <%= f.submit "ログイン" %>
        <div class="legal-text">
          続行することで、習慣管理アプリの
          <%= link_to "利用規約", "#" %>
          および
          <%= link_to "プライバー規約", "#" %>
          に同意するものとみなされます。
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログインしたままにする" %>
        </div>
      <% end %>
    <% end %>
    <div class="box-newadmin">
      <p><span>--------</span> Adminアカウントを作成しますか？ <span>--------</span></p>
      <%= link_to "Adminアカウントを作成", new_admin_registration_path %>
    </div>
  </div>
</div>
